Процедура ДобавитьБыструюЗадачуНаСервере()
	
	Если СокрЛП(врЗадачаНаим) <> "" Тогда
		ДокЗадача = Документы.Задача.СоздатьДокумент();
		ДокЗадача.Дата = ТекущаяДата();
		ДокЗадача.СрокЗадачи = врЗадачаСрок;
		ДокЗадача.ПроектГруппа = врЗадачаПроект;
		ДокЗадача.Состояние = Справочники.СостоянияЗадач.Создана;
		ДокЗадача.НаименованиеЗадачи = врЗадачаНаим;
		ДокЗадача.ОписаниеЗадачи = Новый ХранилищеЗначения(врЗадачаОпис);
		ДокЗадача.ПостановщикЗадачи = ПараметрыСеанса.ТекущийПользователь;
		
		Попытка
			ДокЗадача.Записать();
		Исключение
			Сообщить(ОписаниеОшибки());
		КонецПопытки; 
		врЗадачаНаим = "";
		врЗадачаОпис = "";
		врЗадачаПроект = Справочники.Проекты.ПустаяСсылка();
		врЗадачаСрок = Дата(1,1,1);
	КонецЕсли; 
	
